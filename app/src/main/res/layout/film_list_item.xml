<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1E1636">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/film_item_icon"
        android:layout_alignParentStart="true"
        android:scaleType="fitCenter"
        android:contentDescription="Image of the film"
        android:padding="4dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/film_item_title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:textColor="@color/white"
        android:padding="4dp"
        android:layout_below="@id/film_item_icon"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/film_item_info"
        android:textSize="14sp"
        android:textColor="@color/teal_200"
        android:padding="4dp"
        android:fontFamily="sans-serif"
        android:layout_below="@id/film_item_title"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>