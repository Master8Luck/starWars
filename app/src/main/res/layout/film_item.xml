<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/film_item_icon"
        android:layout_alignParentStart="true"
        android:contentDescription="Image of the film"
        android:padding="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/film_item_title"
        android:textSize="22sp"
        android:padding="8dp"
        android:layout_below="@id/film_item_icon"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/film_item_info"
        android:textSize="18sp"
        android:padding="9dp"
        android:layout_below="@id/film_item_title"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>